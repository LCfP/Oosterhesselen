<div class="modal fade" id="people-overlay">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close">&times;</button>
                <h4 class="modal-title">
                    {{person.Voornaam}} {{person.Achternaam}}
                    <small>#{{person.id}}</small>
                </h4>
            </div>
            <div class="modal-body">
                <div class="text-center born-deceased">
                    <span>
                        Geboren {{person.[Geboorte datum]}}
                    </span>,
                    <span>
                        Overleden {{person.[Overlijden datum]}}
                    </span>
                </div>
                <h5>Aantekening</h5>
                <em>{{person.Aantekening}}</em>
            </div>
            <div class="text-left modal-footer">
                <span class="source-material">Bronnen</span>
                Doop bron: {{person.[Doop bron]}};
                Geboorte bron: {{person.[Geboorte bron]}};
                Overlijden bron: {{person.[Overlijden bron]}}
            </div>
        </div>
    </div>
</div>
