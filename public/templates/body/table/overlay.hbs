<div class="modal fade" id="people-overlay">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close">&times;</button>
                <h4 class="modal-title">
                    {{person.Voornaam}} {{person.Achternaam}}
                    <small>#{{person.[ID-nr]}}</small>
                </h4>
            </div>
            <div class="modal-body clearfix">
                {{!-- We only show this part if there is at least one date available --}}
                {{#if person.showLifetime}}
                    <div class="text-center align-text born-deceased">
                        {{#if person.[Geboorte datum]}}
                            <span>
                            Geboren <em>{{person.[Geboorte datum]}}</em>
                        </span>
                        {{/if}}
                        {{#if person.[Overlijden datum]}}
                            -
                            <span>
                            Overleden <em>{{person.[Overlijden datum]}}</em>
                        </span>
                        {{/if}}
                    </div>
                {{/if}}
                {{!-- Notes are misc. data, so we show it here only if it actually exists --}}
                {{#if person.Aantekening}}
                    <div class="col-sm-2">
                        <h5>Aantekening</h5>
                    </div>
                    <div class="col-sm-10 align-text">
                        {{person.Aantekening}}
                    </div>
                {{/if}}
                {{!-- We only show this part if there is at least some annotation--}}
                {{#if person.showSourcing}}
                    <div class="col-sm-2">
                        <h5>Bronnen</h5>
                    </div>
                    <div class="col-sm-10 align-text">
                        {{#if person.[Doop bron]}}
                            Doop bron: {{person.[Doop bron]}};
                        {{/if}}
                        {{#if person.[Geboorte bron]}}
                            Geboorte bron: {{person.[Geboorte bron]}};
                        {{/if}}
                        {{#if person.[Overlijden bron]}}
                            Overlijden bron: {{person.[Overlijden bron]}};
                        {{/if}}
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>
